{
  "compilerOptions": {
    "target": "ES2022",                          
    "module": "CommonJS",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [      
      "./@types",
      "./node_modules/@types",
    ]
  },
  "exclude": ["node_modules", "build"],
}
